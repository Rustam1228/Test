@{
}
@model List<Test.Models.Student>
<h1>
    Student
</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>            
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model)
        {
            <tr>
                <td>
                    @x.Id
                </td>
                <td>
                    @x.Name
                </td>
                <td>
                    @x.Email
                </td>
                <td>
                    @x.Phone
                </td>                
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@x.Id">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>